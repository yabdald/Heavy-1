<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginActivity"
    android:orientation="horizontal"
    android:background="#ffff"
    >



  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="20dp"
      android:background="#DADDE1"
      android:orientation="vertical"
      >

      <TextView
          android:padding="4dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text=""
          android:gravity="center"
          android:textSize="16sp"
          android:textStyle="bold"/>

      <ImageView
          android:id="@+id/logo"
          android:layout_width="209dp"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_alignParentEnd="true"
          android:layout_marginStart="81dp"
          android:layout_marginTop="2dp"
          android:layout_marginEnd="81dp"
          android:src="@drawable/logo" />


        <TextView
            android:id="@+id/welcomeBack"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:gravity="center"
            android:background="#1687A7"
            android:text="Welcome back"
            android:textColor="#ffff"
            android:layout_below="@+id/logo"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="30dp" />

      <TextView
          android:id="@+id/signToContinue"
          android:layout_width="match_parent"
          android:layout_height="42dp"
          android:layout_below="@+id/welcomeBack"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="-30dp"
          android:layout_marginRight="20dp"
          android:background="#1687A7"
          android:gravity="center"
          android:text="Sign to continue"
          android:textColor="#ffff" />

      <TextView
          android:id="@+id/emailLabel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/signToContinue"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="47dp"
          android:text="Email"
          android:textColor="#1687A7" />

      <EditText
          android:id="@+id/emailInput"
          android:layout_width="match_parent"
          android:layout_height="30dp"
          android:layout_below="@+id/emailLabel"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:ems="10"
          android:textColor="#000"
          android:background="@drawable/edit_text_border"
          android:inputType="textEmailAddress" />

      <TextView
          android:id="@+id/passwordLabel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/emailInput"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="20dp"
          android:text="Password"
          android:textColor="#1687A7" />

      <EditText
          android:id="@+id/passwordInput"
          android:layout_width="match_parent"
          android:layout_height="30dp"
          android:layout_below="@+id/passwordLabel"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:ems="10"
          android:textColor="#000"
          android:background="@drawable/edit_text_border"
          android:inputType="textPassword"/>

      <TextView
          android:id="@+id/forgotPassword"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/passwordInput"
          android:layout_alignParentEnd="true"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="3dp"
          android:layout_marginEnd="19dp"
          android:gravity="center"
          android:text="Forgot your password?"
          android:textColor="#1687A7" />

      <TextView
          android:id="@+id/dontHaveAccount"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:gravity="center"
          android:layout_marginBottom="20dp"
          android:text="Don't have account? create a new account"
          android:textColor="#1687A7" />

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/login"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_above="@+id/dontHaveAccount"
          android:layout_centerInParent="true"
          android:layout_marginRight="50dp"
          android:background="#1687A7"

          android:text="Login"
          android:textColor="#fff"
          android:textSize="20dp" />


  </RelativeLayout>

</LinearLayout>